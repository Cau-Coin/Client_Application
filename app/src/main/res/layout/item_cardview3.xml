<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="120dp"
    android:layout_height="30dp"
    android:layout_marginRight="15dp">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/cardview3_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/filterbox">
            <TextView
                android:id="@+id/cardview3_text"
                android:layout_width="0dp"
                android:layout_weight="10"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:text=""
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/normalColor"
                android:textSize="14dp"/>
            <TextView
                android:id="@+id/cardview3_button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="@color/normalColor"
                android:layout_marginEnd="9dp"
                android:text="X"
                android:textStyle="bold"
                android:textSize="15dp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>